---
const {
  repo = "luvich/luvich.github.io",
  repoId = "R_kgDORNOY-w",
  category = "Comments",
  categoryId = "DIC_kwDORNOY-84C2Veq",
  mapping = "pathname",
  strict = "0",
  reactionsEnabled = "1",
  emitMetadata = "1",
  inputPosition = "top",
  theme = "preferred_color_scheme",
  lang = "vi",
} = Astro.props;
---

<div class="giscus mt-10">
  <script
    is:inline
    src="https://giscus.app/client.js"
    data-repo={repo}
    data-repo-id={repoId}
    data-category={category}
    data-category-id={categoryId}
    data-mapping={mapping}
    data-strict={strict}
    data-reactions-enabled={reactionsEnabled}
    data-emit-metadata={emitMetadata}
    data-input-position={inputPosition}
    data-theme={theme}
    data-lang={lang}
    crossorigin="anonymous"
    async>
  </script>
</div>